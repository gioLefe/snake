{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@octo/models": ["models"],
      "@octo/helpers": ["helpers"],
      "@octo/ui/canvas": ["ui/canvas"],
      "@octo/ui/canvas/models": ["ui/canvas/models"],
      "@octo/ui/controls": ["ui/controls"]
    }
  },
  "include": ["src"]
}
